{
  "version": 8,
  "name": "Tegola Vector Style",
  "metadata": {
    "description": "Mapbox style configuration for Tegola Vector Tiles"
  },
  "sources": {
    "osm-background": {
      "type": "raster",
      "tiles": [
        "https://a.tile.openstreetmap.org/{z}/{x}/{y}.png",
        "https://b.tile.openstreetmap.org/{z}/{x}/{y}.png",
        "https://c.tile.openstreetmap.org/{z}/{x}/{y}.png"
      ],
      "tileSize": 256,
      "attribution": "Â© OpenStreetMap Contributors"
    },
    "tegola-livereports": {
      "type": "vector",
      "tiles": ["http://localhost:8080/maps/livereports/{z}/{x}/{y}.pbf"],
      "minzoom": 10,
      "maxzoom": 22
    }
  },
  "sprite": "",
  "glyphs": "https://fonts.openmaptiles.org/{fontstack}/{range}.pbf",
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "#f8f4f0"
      }
    },
    {
      "id": "osm-base",
      "type": "raster",
      "source": "osm-background",
      "minzoom": 0,
      "maxzoom": 22
    },
    
    /* Basic layers (land, roads, buildings, poi) removed as they depend on removed provider layers */
    
    {
      "id": "live-poi",
      "type": "circle",
      "source": "tegola-livereports",
      "source-layer": "live_poi",
      "minzoom": 10,
      "maxzoom": 22,
      "paint": {
        "circle-radius": [
          "interpolate",
          ["linear"],
          ["zoom"],
          10, 5,
          14, 8,
          18, 10
        ],
        "circle-color": [
          "match",
          ["get", "status"],
          "ACTIVE", "#4285F4",
          "EXPIRED", "#AAAAAA",
          "REJECTED", "#EA4335",
          "CONFIRMED", "#34A853",
          "#4285F4"
        ],
        "circle-stroke-width": 2,
        "circle-stroke-color": "#ffffff"
      }
    },
    {
      "id": "road-closures-lines",
      "type": "line",
      "source": "tegola-livereports",
      "source-layer": "road_closure_lines",
      "minzoom": 10,
      "maxzoom": 22,
      "paint": {
        "line-color": "#EA4335",
        "line-width": [
          "interpolate",
          ["linear"],
          ["zoom"],
          10, 2,
          14, 4,
          18, 6
        ],
        "line-dasharray": [2, 1]
      },
      "layout": {
        "line-cap": "round",
        "line-join": "round"
      }
    },
    {
      "id": "entry-points",
      "type": "circle",
      "source": "tegola-livereports",
      "source-layer": "road_closure_points",
      "minzoom": 10,
      "maxzoom": 22,
      "paint": {
        "circle-radius": [
          "interpolate",
          ["linear"],
          ["zoom"],
          10, 4,
          14, 6,
          18, 8
        ],
        "circle-color": "#34A853",
        "circle-stroke-width": 2,
        "circle-stroke-color": "#ffffff"
      }
    },
    
    /* Label layers for basic map features removed as they depend on removed provider layers */
    {
      "id": "live-poi-labels",
      "type": "symbol",
      "source": "tegola-livereports",
      "source-layer": "live_poi",
      "minzoom": 14,
      "maxzoom": 22,
      "layout": {
        "text-field": ["get", "category_name"],
        "text-font": ["Open Sans Regular"],
        "text-size": 12,
        "text-offset": [0, 1.5],
        "text-anchor": "top",
        "text-optional": true
      },
      "paint": {
        "text-color": "#333",
        "text-halo-color": "#fff",
        "text-halo-width": 2
      }
    }
  ]
}